<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/grey_210</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_marginBottom">2dp</item>


    </style>

    <style name="dialog_image_item">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="dialog_ll_item">
        <item name="android:background">@drawable/dialog_add_notes_style</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


</resources>