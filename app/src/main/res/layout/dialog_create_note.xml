<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_add_notes_style"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chose_type_dialog_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <LinearLayout
        android:id="@+id/btn_type_note"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Create note" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/add_note_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_type_audio"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Create audio" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/audio_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_type_photo"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Create photo" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/add_photo_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_type_list"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Create list" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/checklist_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_type_draw"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Create draw" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/draw_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_type_load_file"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Load file" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/download_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_type_link"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="Create link" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/add_link_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_type_folder"
        style="@style/dialog_ll_item">

        <TextView
            style="@style/dialog_text_item"
            android:text="@string/create_folder_text" />

        <ImageView
            style="@style/dialog_image_item"
            android:src="@drawable/create_new_folder_24" />

    </LinearLayout>

</LinearLayout>